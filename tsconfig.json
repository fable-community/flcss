{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": ".",
    "target": "ES6",
    "lib": ["ES6", "ES5", "ES7", "DOM"],
    "moduleResolution": "Node",
    "types": [ "jest", "node" ],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}